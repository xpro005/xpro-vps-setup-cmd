#!/bin/bash
set -euo pipefail

# =============================
# Enhanced Multi-VM Manager
# =============================

# Function to display header
display_header() {
    clear
    cat << "EOF"
========================================================================
                  __   __   _____    _____     ___  
                  \ \ / /  |  __ \  |  __ \   / _ \ 
                   \ V /   | |__) | | |__) | | | | |
                    > <    |  ___/  |  _  /  | | | |
                   / . \   | |      | | \ \  | |_| |
                  /_/ \_\  |_|      |_|  \_\  \___/
========================================================================
EOF
    echo
}

# Function to display colored output with emojis
print_status() {
    local type=$1
    local message=$2
    
    case $type in
        "INFO") echo -e "\033[1;34mğŸ“‹  [INFO]\033[0m $message" ;;
        "WARN") echo -e "\033[1;33mâš ï¸  [WARN]\033[0m $message" ;;
        "ERROR") echo -e "\033[1;31mâœ… [ERROR]\033[0m $message" ;;
        "SUCCESS") echo -e "\033[1;32mğŸ¯ [SUCCESS]\033[0m $message" ;;
        "INPUT") echo -e "\033[1;36mÃ°Å¸Å½Â¯ [INPUT]\033[0m $message" ;;
        *) echo "[$type] $message" ;;
    esac
}

# Function to check if image file is locked
check_image_lock() {
    local img_file=$1
    local vm_name=$2
    
    # Check if QEMU is already using this image
    if lsof "$img_file" 2>/dev/null | grep -q qemu-system; then
        [span_6](start_span)print_status "WARN" "ğŸ”’ Image file $img_file is already in use by another QEMU process"[span_6](end_span)
        
        # Find the process ID
        [span_7](start_span)local pid=$(lsof "$img_file" 2>/dev/null | grep qemu-system | awk '{print $2}' | head -1)[span_7](end_span)
        if [[ -n "$pid" ]]; then
            [span_8](start_span)print_status "INFO" "ğŸ” Process ID using the image: $pid"[span_8](end_span)
            
            # Check if it's our own VM
            if ps -p "$pid" -o cmd= | grep -q "$vm_name"; then
                [span_9](start_span)print_status "INFO" "ğŸ¤” This appears to be the same VM already running"[span_9](end_span)
                [span_10](start_span)read -p "$(print_status "INPUT" "ğŸ”„ Kill existing process and restart? (y/N): ")" kill_choice[span_10](end_span)
                if [[ "$kill_choice" =~ ^[Yy]$ ]]; then
                    kill "$pid"
                    sleep 2
                    if kill -0 "$pid" 2>/dev/null; then
                        kill -9 "$pid"
                        [span_11](start_span)print_status "WARN" "âš ï¸  Forcefully terminated process $pid"[span_11](end_span)
                    fi
                    return 0
                else
                    return 1
                fi
            else
                [span_12](start_span)print_status "ERROR" "ğŸš« Another QEMU instance is using this image"[span_12](end_span)
                return 1
            fi
        fi
        return 1
    fi
    
    # Check for lock files
    local lock_file="${img_file}.lock"
    if [[ -f "$lock_file" ]]; then
        [span_13](start_span)print_status "WARN" "ğŸ”’ Lock file found: $lock_file"[span_13](end_span)
        
        # Check if lock file is stale (older than 5 minutes)
        if [[ $(find "$lock_file" -mmin +5 2>/dev/null) ]]; then
            [span_14](start_span)print_status "WARN" "â° Lock file appears stale (older than 5 minutes)"[span_14](end_span)
            [span_15](start_span)read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Remove stale lock file? (y/N): ")" remove_lock[span_15](end_span)
            if [[ "$remove_lock" =~ ^[Yy]$ ]]; then
                rm -f "$lock_file"
                [span_16](start_span)print_status "SUCCESS" "âœ… Removed stale lock file"[span_16](end_span)
                return 0
            else
                return 1
            fi
        fi
        return 1
    fi
    return 0
}

# Function to validate input
validate_input() {
    local type=$1
    local value=$2
    
    case $type in
        "number")
            if ! [[ "$value" =~ ^[0-9]+$ ]]; then
                [span_17](start_span)print_status "ERROR" "âŒ Must be a number"[span_17](end_span)
                return 1
            fi
            ;;
        "size")
            if ! [[ "$value" =~ ^[0-9]+[GgMm]$ ]]; then
                [span_18](start_span)print_status "ERROR" "âŒ Must be a size with unit (e.g., 100G, 512M)"[span_18](end_span)
                return 1
            fi
            ;;
        "port")
            if ! [[ "$value" =~ ^[0-9]+$ ]] || [ "$value" -lt 23 ] || [ "$value" -gt 65535 ]; then
                [span_19](start_span)print_status "ERROR" "âŒ Must be a valid port number (23-65535)"[span_19](end_span)
                return 1
            fi
            ;;
        "name")
            if ! [[ "$value" =~ ^[a-zA-Z0-9_-]+$ ]]; then
                [span_20](start_span)print_status "ERROR" "âŒ VM name can only contain letters, numbers, hyphens, and underscores"[span_20](end_span)
                return 1
            fi
            ;;
        "username")
            if ! [[ "$value" =~ ^[a-z_][a-z0-9_-]*$ ]]; then
                [span_21](start_span)print_status "ERROR" "âŒ Username must start with a letter or underscore, and contain only letters, numbers, hyphens, and underscores"[span_21](end_span)
                return 1
            fi
            ;;
    esac
    return 0
}

# Function to check dependencies
check_dependencies() {
    local deps=("qemu-system-x86_64" "wget" "cloud-localds" "qemu-img" "lsof")
    local missing_deps=()
    
    for dep in "${deps[@]}"; do
        if ! command -v "$dep" &> /dev/null; then
            missing_deps+=("$dep")
        fi
    done
    
    if [ ${#missing_deps[@]} -ne 0 ]; then
        [span_22](start_span)print_status "ERROR" "ğŸ› ï¸ Missing dependencies: ${missing_deps[*]}"[span_22](end_span)
        [span_23](start_span)print_status "INFO" "ğŸ’¡ On Ubuntu/Debian, try: sudo apt install qemu-system cloud-image-utils wget lsof"[span_23](end_span)
        exit 1
    fi
}

# Function to cleanup temporary files
cleanup() {
    if [ -f "user-data" ]; then rm -f "user-data"; fi
    if [ -f "meta-data" ]; then rm -f "meta-data"; fi
}

# Function to get all VM configurations
get_vm_list() {
    find "$VM_DIR" -name "*.conf" -exec basename {} .conf \; [span_24](start_span)2>/dev/null | sort[span_24](end_span)
}

# Function to load VM configuration
load_vm_config() {
    local vm_name=$1
    local config_file="$VM_DIR/$vm_name.conf"
    
    if [[ -f "$config_file" ]]; then
        # Clear previous variables
        unset VM_NAME OS_TYPE CODENAME IMG_URL HOSTNAME USERNAME PASSWORD
        unset DISK_SIZE MEMORY CPUS SSH_PORT GUI_MODE PORT_FORWARDS IMG_FILE SEED_FILE CREATED
        
        source "$config_file"
        return 0
    else
        [span_25](start_span)print_status "ERROR" "ğŸ“‚ Configuration for VM '$vm_name' not found"[span_25](end_span)
        return 1
    fi
}

# Function to save VM configuration
save_vm_config() {
    local config_file="$VM_DIR/$VM_NAME.conf"
    
    cat > "$config_file" <<EOF
VM_NAME="$VM_NAME"
OS_TYPE="$OS_TYPE"
CODENAME="$CODENAME"
IMG_URL="$IMG_URL"
HOSTNAME="$HOSTNAME"
USERNAME="$USERNAME"
PASSWORD="$PASSWORD"
DISK_SIZE="$DISK_SIZE"
MEMORY="$MEMORY"
CPUS="$CPUS"
SSH_PORT="$SSH_PORT"
GUI_MODE="$GUI_MODE"
PORT_FORWARDS="$PORT_FORWARDS"
IMG_FILE="$IMG_FILE"
SEED_FILE="$SEED_FILE"
CREATED="$CREATED"
EOF
    
    [span_26](start_span)print_status "SUCCESS" "ğŸ’¾ Configuration saved to $config_file"[span_26](end_span)
}

# Function to create new VM
create_new_vm() {
    [span_27](start_span)print_status "INFO" "ğŸ†• Creating a new VM"[span_27](end_span)
    
    # OS Selection
    [span_28](start_span)print_status "INFO" "ğŸŒ Select an OS to set up:"[span_28](end_span)
    local os_options=()
    local i=1
    for os in "${!OS_OPTIONS[@]}"; do
        echo "  $i) $os"
        os_options[$i]="$os"
        ((i++))
    done
    
    while true; do
        [span_29](start_span)read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice (1-${#OS_OPTIONS[@]}): ")" choice[span_29](end_span)
        if [[ "$choice" =~ ^[0-9]+$ ]] && [ "$choice" -ge 1 ] && [ "$choice" -le ${#OS_OPTIONS[@]} ]; then
            local os="${os_options[$choice]}"
            [span_30](start_span)IFS='|' read -r OS_TYPE CODENAME IMG_URL DEFAULT_HOSTNAME DEFAULT_USERNAME DEFAULT_PASSWORD <<< "${OS_OPTIONS[$os]}"[span_30](end_span)
            break
        else
            [span_31](start_span)print_status "ERROR" "âŒ Invalid selection. Try again."[span_31](end_span)
        fi
    done

    # Custom Inputs with validation
    while true; do
        [span_32](start_span)read -p "$(print_status "INPUT" "ğŸ·ï¸  Enter VM name (default: $DEFAULT_HOSTNAME): ")" VM_NAME[span_32](end_span)
        VM_NAME="${VM_NAME:-$DEFAULT_HOSTNAME}"
        if validate_input "name" "$VM_NAME"; then
            # Check if VM name already exists
            if [[ -f "$VM_DIR/$VM_NAME.conf" ]]; then
                [span_33](start_span)print_status "ERROR" "âš ï¸  VM with name '$VM_NAME' already exists"[span_33](end_span)
            else
                break
            fi
        fi
    done

    while true; do
        [span_34](start_span)read -p "$(print_status "INPUT" "ğŸ  Enter hostname (default: $VM_NAME): ")" HOSTNAME[span_34](end_span)
        HOSTNAME="${HOSTNAME:-$VM_NAME}"
        if validate_input "name" "$HOSTNAME"; then
            break
        fi
    done

    while true; do
        [span_35](start_span)read -p "$(print_status "INPUT" "ğŸ‘¤ Enter username (default: $DEFAULT_USERNAME): ")" USERNAME[span_35](end_span)
        USERNAME="${USERNAME:-$DEFAULT_USERNAME}"
        if validate_input "username" "$USERNAME"; then
            break
        fi
    done

    while true; do
        [span_36](start_span)read -s -p "$(print_status "INPUT" "ğŸ”‘ Enter password (default: $DEFAULT_PASSWORD): ")" PASSWORD[span_36](end_span)
        PASSWORD="${PASSWORD:-$DEFAULT_PASSWORD}"
        echo
        if [ -n "$PASSWORD" ]; then
            break
        else
            [span_37](start_span)print_status "ERROR" "âŒ Password cannot be empty"[span_37](end_span)
        fi
    done

    while true; do
        [span_38](start_span)read -p "$(print_status "INPUT" "ğŸ’¾ Disk size (default: 20G): ")" DISK_SIZE[span_38](end_span)
        DISK_SIZE="${DISK_SIZE:-20G}"
        if validate_input "size" "$DISK_SIZE"; then
            break
        fi
    done

    while true; do
        [span_39](start_span)read -p "$(print_status "INPUT" "ğŸ§  Memory in MB (default: 2048): ")" MEMORY[span_39](end_span)
        MEMORY="${MEMORY:-2048}"
        if validate_input "number" "$MEMORY"; then
            break
        fi
    done

    while true; do
        [span_40](start_span)read -p "$(print_status "INPUT" "âš¡ Number of CPUs (default: 2): ")" CPUS[span_40](end_span)
        CPUS="${CPUS:-2}"
        if validate_input "number" "$CPUS"; then
            break
        fi
    done

    while true; do
        [span_41](start_span)read -p "$(print_status "INPUT" "ğŸ”Œ SSH Port (default: 2222): ")" SSH_PORT[span_41](end_span)
        SSH_PORT="${SSH_PORT:-2222}"
        if validate_input "port" "$SSH_PORT"; then
            # Check if port is already in use
            if ss -tln 2>/dev/null | grep -q ":$SSH_PORT "; then
                [span_42](start_span)print_status "ERROR" "ğŸš« Port $SSH_PORT is already in use"[span_42](end_span)
            else
                break
            fi
        fi
    done

    while true; do
        [span_43](start_span)read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enable GUI mode? (y/n, default: n): ")" gui_input[span_43](end_span)
        GUI_MODE=false
        gui_input="${gui_input:-n}"
        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
            GUI_MODE=true
            break
        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
            break
        else
            [span_44](start_span)print_status "ERROR" "âŒ Please answer y or n"[span_44](end_span)
        fi
    done

    # Additional network options
    [span_45](start_span)read -p "$(print_status "INPUT" "ğŸŒ Additional port forwards (e.g., 8080:80, press Enter for none): ")" PORT_FORWARDS[span_45](end_span)

    IMG_FILE="$VM_DIR/$VM_NAME.img"
    SEED_FILE="$VM_DIR/$VM_NAME-seed.iso"
    CREATED="$(date)"

    # Download and setup VM image
    setup_vm_image
    
    # Save configuration
    save_vm_config
}

# Function to setup VM image
setup_vm_image() {
    [span_46](start_span)print_status "INFO" "ğŸ“¥ Downloading and preparing image..."[span_46](end_span)
    
    # Create VM directory if it doesn't exist
    mkdir -p "$VM_DIR"
    
    # Check if image already exists
    if [[ -f "$IMG_FILE" ]]; then
        [span_47](start_span)print_status "INFO" "âœ… Image file already exists. Skipping download."[span_47](end_span)
    else
        [span_48](start_span)print_status "INFO" "ğŸŒ Downloading image from $IMG_URL..."[span_48](end_span)
        if ! wget --progress=bar:force "$IMG_URL" -O "$IMG_FILE.tmp"; then
            [span_49](start_span)print_status "ERROR" "âŒ Failed to download image from $IMG_URL"[span_49](end_span)
            exit 1
        fi
        mv "$IMG_FILE.tmp" "$IMG_FILE"
    fi
    
    # Resize the disk image if needed
    [span_50](start_span)if ! qemu-img resize "$IMG_FILE" "$DISK_SIZE" 2>/dev/null; then[span_50](end_span)
        [span_51](start_span)print_status "WARN" "âš ï¸  Failed to resize disk image. Creating new image with specified size..."[span_51](end_span)
        # Create a new image with the specified size
        rm -f "$IMG_FILE"
        qemu-img create -f qcow2 -F qcow2 -b "$IMG_FILE" "$IMG_FILE.tmp" "$DISK_SIZE" 2>/dev/null || \
        [span_52](start_span)qemu-img create -f qcow2 "$IMG_FILE" "$DISK_SIZE"[span_52](end_span)
        if [ -f "$IMG_FILE.tmp" ]; then
            mv "$IMG_FILE.tmp" "$IMG_FILE"
        fi
    fi

    # cloud-init configuration
    cat > user-data <<EOF
#cloud-config
hostname: $HOSTNAME
ssh_pwauth: true
disable_root: false
users:
  - name: $USERNAME
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    password: $(openssl passwd -6 "$PASSWORD" | tr -d '\n')
chpasswd:
  list: |
    root:$PASSWORD
    $USERNAME:$PASSWORD
  expire: false
EOF

    cat > meta-data <<EOF
instance-id: iid-$VM_NAME
local-hostname: $HOSTNAME
EOF

    if ! cloud-localds "$SEED_FILE" user-data meta-data; then
        [span_53](start_span)print_status "ERROR" "âŒ Failed to create cloud-init seed image"[span_53](end_span)
        exit 1
    fi
    
    [span_54](start_span)print_status "SUCCESS" "ğŸ‰ VM '$VM_NAME' created successfully."[span_54](end_span)
    [span_55](start_span)print_status "INFO" "ğŸ”‘ Login with: username=$USERNAME, password=$PASSWORD"[span_55](end_span)
    [span_56](start_span)print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"[span_56](end_span)
}

# Function to start a VM
start_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        # Check if image is already in use
        [span_57](start_span)if ! check_image_lock "$IMG_FILE" "$vm_name"; then[span_57](end_span)
            [span_58](start_span)print_status "ERROR" "ğŸ”’ Cannot start VM: Image file is locked by another process"[span_58](end_span)
            [span_59](start_span)read -p "$(print_status "INPUT" "ğŸ”„ Do you want to force kill all QEMU processes using this image? (y/N): ")" force_kill[span_59](end_span)
            if [[ "$force_kill" =~ ^[Yy]$ ]]; then
                pkill -f "qemu-system.*$IMG_FILE"
                sleep 2
                if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
                    pkill -9 -f "qemu-system.*$IMG_FILE"
                fi
                [span_60](start_span)print_status "SUCCESS" "âœ… Terminated processes using the image"[span_60](end_span)
                # Remove any lock files
                rm -f "${IMG_FILE}.lock" 2>/dev/null
            else
                return 1
            fi
        fi
        
        # Check if VM is already running
        if is_vm_running "$vm_name"; then
            [span_61](start_span)print_status "WARN" "âš ï¸  VM '$vm_name' is already running"[span_61](end_span)
            [span_62](start_span)read -p "$(print_status "INPUT" "ğŸ”„ Stop and restart? (y/N): ")" restart_choice[span_62](end_span)
            if [[ "$restart_choice" =~ ^[Yy]$ ]]; then
                stop_vm "$vm_name"
                sleep 2
            else
                return 1
            fi
        fi
        
        [span_63](start_span)print_status "INFO" "ğŸš€ Starting VM: $vm_name"[span_63](end_span)
        [span_64](start_span)print_status "INFO" "ğŸ”Œ SSH: ssh -p $SSH_PORT $USERNAME@localhost"[span_64](end_span)
        [span_65](start_span)print_status "INFO" "ğŸ”‘ Password: $PASSWORD"[span_65](end_span)
        
        # Check if image file exists
        if [[ ! -f "$IMG_FILE" ]]; then
            [span_66](start_span)print_status "ERROR" "âŒ VM image file not found: $IMG_FILE"[span_66](end_span)
            return 1
        fi
        
        # Check if seed file exists
        if [[ ! -f "$SEED_FILE" ]]; then
            [span_67](start_span)print_status "WARN" "âš ï¸  Seed file not found, recreating..."[span_67](end_span)
            setup_vm_image
        fi
        
        # Base QEMU command
        local qemu_cmd=(
            qemu-system-x86_64
            -enable-kvm
            -m "$MEMORY"
            -smp "$CPUS"
            -cpu host
            -drive "file=$IMG_FILE,format=qcow2,if=virtio"
            -drive "file=$SEED_FILE,format=raw,if=virtio"
            -boot order=c
            -device virtio-net-pci,netdev=n0
            -[span_68](start_span)netdev "user,id=n0,hostfwd=tcp::$SSH_PORT-:22"[span_68](end_span)
        )

        # Add port forwards if specified
        if [[ -n "$PORT_FORWARDS" ]]; then
            IFS=',' read -ra forwards <<< "$PORT_FORWARDS"
            for forward in "${forwards[@]}"; do
                IFS=':' read -r host_port guest_port <<< "$forward"
                qemu_cmd+=(-device "virtio-net-pci,netdev=n${#qemu_cmd[@]}")
                qemu_cmd+=(-netdev "user,id=n${#qemu_cmd[@]},hostfwd=tcp::$host_port-:$guest_port")
            done
        fi

        # Add GUI or console mode
        if [[ "$GUI_MODE" == true ]]; then
            qemu_cmd+=(-vga virtio -display gtk,gl=on)
            [span_69](start_span)print_status "INFO" "ğŸ–¥ï¸  Starting in GUI mode..."[span_69](end_span)
        else
            qemu_cmd+=(-nographic -serial mon:stdio)
            [span_70](start_span)print_status "INFO" "ğŸ“Ÿ Starting in console mode..."[span_70](end_span)
            [span_71](start_span)print_status "INFO" "ğŸ›‘ Press Ctrl+A then X to exit QEMU console"[span_71](end_span)
        fi

        # Add performance enhancements
        qemu_cmd+=(
            -device virtio-balloon-pci
            -object rng-random,filename=/dev/urandom,id=rng0
            -device virtio-rng-pci,rng=rng0
        )

        [span_72](start_span)print_status "INFO" "âš¡ Starting QEMU..."[span_72](end_span)
        [span_73](start_span)echo "ğŸ“Š Configuration: ${MEMORY}MB RAM, ${CPUS} CPUs, ${DISK_SIZE} disk"[span_73](end_span)
        
        # Start the VM
        if ! "${qemu_cmd[@]}"; then
            [span_74](start_span)print_status "ERROR" "âŒ Failed to start VM. There might be a problem with the image file or configuration."[span_74](end_span)
            # Try to clean up lock files
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            return 1
        fi
        
        [span_75](start_span)print_status "INFO" "ğŸ›‘ VM $vm_name has been shut down"[span_75](end_span)
    fi
}

# Function to delete a VM
delete_vm() {
    local vm_name=$1
    
    [span_76](start_span)print_status "WARN" "âš ï¸  âš ï¸  âš ï¸  This will permanently delete VM '$vm_name' and all its data!"[span_76](end_span)
    [span_77](start_span)read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Are you sure? (y/N): ")" -n 1 -r[span_77](end_span)
    echo
    if [[ $REPLY =~ ^[Yy]$ ]]; then
        if load_vm_config "$vm_name"; then
            # Check if VM is running
            if is_vm_running "$vm_name"; then
                [span_78](start_span)print_status "WARN" "âš ï¸  VM is currently running. Stopping it first..."[span_78](end_span)
                stop_vm "$vm_name"
                sleep 2
            fi
            
            rm -f "$IMG_FILE" "$SEED_FILE" "$VM_DIR/$vm_name.conf" "${IMG_FILE}.lock" 2>/dev/null
            [span_79](start_span)print_status "SUCCESS" "âœ… VM '$vm_name' has been deleted"[span_79](end_span)
        fi
    else
        [span_80](start_span)print_status "INFO" "ğŸ‘ Deletion cancelled"[span_80](end_span)
    fi
}

# Function to show VM info
show_vm_info() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        echo
        [span_81](start_span)print_status "INFO" "ğŸ“Š VM Information: $vm_name"[span_81](end_span)
        echo "ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹"
        echo "ğŸŒ OS: $OS_TYPE"
        echo "ğŸ·ï¸  Hostname: $HOSTNAME"
        echo "ğŸ‘¤ Username: $USERNAME"
        echo "ğŸ”‘ Password: $PASSWORD"
        echo "ğŸ”Œ SSH Port: $SSH_PORT"
        [span_82](start_span)echo "ğŸ§  Memory: $MEMORY MB"[span_82](end_span)
        echo "âš¡ CPUs: $CPUS"
        echo "ğŸ’¾ Disk: $DISK_SIZE"
        echo "ğŸ–¥ï¸  GUI Mode: $GUI_MODE"
        echo "ğŸŒ Port Forwards: ${PORT_FORWARDS:-None}"
        echo "ğŸ“… Created: $CREATED"
        echo "ğŸ’¿ Image File: $IMG_FILE"
        echo "ğŸŒ± Seed File: $SEED_FILE"
        
        # Show lock status
        if check_image_lock "$IMG_FILE" "$vm_name" >/dev/null 2>&1; then
            [span_83](start_span)echo "ğŸ”“ Image Status: Unlocked"[span_83](end_span)
        else
            [span_84](start_span)echo "ğŸ”’ Image Status: Locked (possibly in use)"[span_84](end_span)
        fi
        
        # Show if VM is running
        if is_vm_running "$vm_name"; then
            [span_85](start_span)echo "ğŸš€ Status: Running"[span_85](end_span)
        else
            [span_86](start_span)echo "ğŸ’¤ Status: Stopped"[span_86](end_span)
        fi
        
        echo "ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹ğŸ”¹"
        echo
        [span_87](start_span)read -p "$(print_status "INPUT" "â­ï¸  Press Enter to continue...")"[span_87](end_span)
    fi
}

# Function to check if VM is running
is_vm_running() {
    local vm_name=$1
    
    # First try to find by image file
    if pgrep -f "qemu-system.*$vm_name" >/dev/null; then
        return 0
    fi
    
    # Also check by image file path
    if load_vm_config "$vm_name" 2>/dev/null; then
        if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then
            return 0
        fi
    fi
    
    return 1
}

# Function to stop a running VM
stop_vm() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            [span_88](start_span)print_status "INFO" "ğŸ›‘ Stopping VM: $vm_name"[span_88](end_span)
            
           # Try graceful shutdown first
            pkill -f "qemu-system.*$IMG_FILE"
            sleep 2
            
            # Check if it stopped
            if is_vm_running "$vm_name"; then
                [span_89](start_span)print_status "WARN" "âš ï¸  VM did not stop gracefully, forcing termination..."[span_89](end_span)
                pkill -9 -f "qemu-system.*$IMG_FILE"
                sleep 1
            fi
            
            # Clean up lock files
            rm -f "${IMG_FILE}.lock" 2>/dev/null
            
            if is_vm_running "$vm_name"; then
                [span_90](start_span)print_status "ERROR" "âŒ Failed to stop VM"[span_90](end_span)
                return 1
            else
                [span_91](start_span)print_status "SUCCESS" "âœ… VM $vm_name stopped"[span_91](end_span)
            fi
        else
            [span_92](start_span)print_status "INFO" "ğŸ’¤ VM $vm_name is not running"[span_92](end_span)
            # Still try to clean up any lock files
            rm -f "${IMG_FILE}.lock" 2>/dev/null
        fi
    fi
}

# Function to edit VM configuration
edit_vm_config() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        [span_93](start_span)print_status "INFO" "ğŸ“ Editing VM: $vm_name"[span_93](end_span)
        
        while true; do
            [span_94](start_span)echo "ğŸ“‹ What would you like to edit?"[span_94](end_span)
            echo "  1) ğŸ·ï¸  Hostname"
            echo "  2) ğŸ‘¤ Username"
            echo "  3) ğŸ”‘ Password"
            echo "  4) ğŸ”Œ SSH Port"
            [span_95](start_span)echo "  5) ğŸ–¥ï¸  GUI Mode"[span_95](end_span)
            echo "  6) ğŸŒ Port Forwards"
            echo "  7) ğŸ§  Memory (RAM)"
            echo "  8) âš¡ CPU Count"
            echo "  9) ğŸ’¾ Disk Size"
            [span_96](start_span)echo "  0) â†©ï¸  Back to main menu"[span_96](end_span)
            
            case $edit_choice in
                1)
                    while true; do
                        [span_98](start_span)read -p "$(print_status "INPUT" "ğŸ·ï¸  Enter new hostname (current: $HOSTNAME): ")" new_hostname[span_98](end_span)
                        new_hostname="${new_hostname:-$HOSTNAME}"
                        if validate_input "name" "$new_hostname"; then
                            HOSTNAME="$new_hostname"
                            break
                        fi
                    done
                ;;
                2)
                    while true; do
                        [span_99](start_span)read -p "$(print_status "INPUT" "ğŸ‘¤ Enter new username (current: $USERNAME): ")" new_username[span_99](end_span)
                        new_username="${new_username:-$USERNAME}"
                        if validate_input "username" "$new_username"; then
                            USERNAME="$new_username"
                            break
                        fi
                    done
                    ;;
                3)
                    while true; do
                        [span_100](start_span)read -s -p "$(print_status "INPUT" "ğŸ”‘ Enter new password (current: ****): ")" new_password[span_100](end_span)
                        new_password="${new_password:-$PASSWORD}"
                        echo
                        if [ -n "$new_password" ]; then
                            PASSWORD="$new_password"
                            break
                        else
                            [span_101](start_span)print_status "ERROR" "âŒ Password cannot be empty"[span_101](end_span)
                        fi
                    done
                    ;;
                4)
                    while true; do
                        [span_102](start_span)read -p "$(print_status "INPUT" "ğŸ”Œ Enter new SSH port (current: $SSH_PORT): ")" new_ssh_port[span_102](end_span)
                        new_ssh_port="${new_ssh_port:-$SSH_PORT}"
                        if validate_input "port" "$new_ssh_port"; then
                            # Check if port is already in use
                            [span_103](start_span)if [ "$new_ssh_port" != "$SSH_PORT" ] && ss -tln 2>/dev/null | grep -q ":$new_ssh_port "; then[span_103](end_span)
                                [span_104](start_span)print_status "ERROR" "ğŸš« Port $new_ssh_port is already in use"[span_104](end_span)
                            else
                                SSH_PORT="$new_ssh_port"
                                break
                            fi
                        fi
                    done
                    ;;
                5)
                    while true; do
                        [span_105](start_span)read -p "$(print_status "INPUT" "ğŸ–¥ï¸  Enable GUI mode? (y/n, current: $GUI_MODE): ")" gui_input[span_105](end_span)
                        gui_input="${gui_input:-}"
                        if [[ "$gui_input" =~ ^[Yy]$ ]]; then 
                            GUI_MODE=true
                            break
                        elif [[ "$gui_input" =~ ^[Nn]$ ]]; then
                            GUI_MODE=false
                            break
                        elif [ -z "$gui_input" ]; then
                            # Keep current value if user just pressed Enter
                            break
                        else
                            [span_106](start_span)print_status "ERROR" "âŒ Please answer y or n"[span_106](end_span)
                        fi
                    done
                    ;;
                6)
                    [span_107](start_span)read -p "$(print_status "INPUT" "ğŸŒ Additional port forwards (current: ${PORT_FORWARDS:-None}): ")" new_port_forwards[span_107](end_span)
                    PORT_FORWARDS="${new_port_forwards:-$PORT_FORWARDS}"
                    ;;
                7)
                    while true; do
                        [span_108](start_span)read -p "$(print_status "INPUT" "ğŸ§  Enter new memory in MB (current: $MEMORY): ")" new_memory[span_108](end_span)
                        new_memory="${new_memory:-$MEMORY}"
                        if validate_input "number" "$new_memory"; then
                            MEMORY="$new_memory"
                            break
                        fi
                    done
                    ;;
                8)
                    while true; do
                        [span_109](start_span)read -p "$(print_status "INPUT" "âš¡ Enter new CPU count (current: $CPUS): ")" new_cpus[span_109](end_span)
                        new_cpus="${new_cpus:-$CPUS}"
                        if validate_input "number" "$new_cpus"; then
                            CPUS="$new_cpus"
                            break
                        fi
                    done
                    ;;
                9)
                    while true; do
                        [span_110](start_span)read -p "$(print_status "INPUT" "ğŸ’¾ Enter new disk size (current: $DISK_SIZE): ")" new_disk_size[span_110](end_span)
                        new_disk_size="${new_disk_size:-$DISK_SIZE}"
                        if validate_input "size" "$new_disk_size"; then
                            DISK_SIZE="$new_disk_size"
                            break
                        fi
                    done
                    ;;
                0)
                    return 0
                    ;;
                *)
                    [span_111](start_span)print_status "ERROR" "âŒ Invalid selection"[span_111](end_span)
                    continue
                    ;;
            esac
            
            # Recreate seed image with new configuration if user/password/hostname changed
            if [[ "$edit_choice" -eq 1 || "$edit_choice" -eq 2 || [span_112](start_span)"$edit_choice" -eq 3 ]]; then[span_112](end_span)
                [span_113](start_span)print_status "INFO" "ğŸ”„ Updating cloud-init configuration..."[span_113](end_span)
                setup_vm_image
