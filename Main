                        [span_173](start_span)print_status "ERROR" "âŒ Invalid selection"[span_173](end_span)
                    fi
                fi
                ;;
            3)
                if [ $vm_count -gt 0 ]; then
                    [span_174](start_span)read -p "$(print_status "INPUT" "ğŸ›‘ Enter VM number to stop: ")" vm_num[span_174](end_span)
                    [span_175](start_span)if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then[span_175](end_span)
                        stop_vm "${vms[$((vm_num-1))]}"
                    else
                        [span_176](start_span)print_status "ERROR" "âŒ Invalid selection"[span_176](end_span)
                    fi
                fi
                ;;
            4)
                if [ $vm_count -gt 0 ]; then
                    [span_177](start_span)read -p "$(print_status "INPUT" "ğŸ“Š Enter VM number to show info: ")" vm_num[span_177](end_span)
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        show_vm_info "${vms[$((vm_num-1))]}"
                    else
                        [span_178](start_span)print_status "ERROR" "âŒ Invalid selection"[span_178](end_span)
                    fi
                fi
                ;;
            5)
                if [ $vm_count -gt 0 ]; then
                    [span_179](start_span)read -p "$(print_status "INPUT" "ğŸ“ Enter VM number to edit: ")" vm_num[span_179](end_span)
                    [span_180](start_span)if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then[span_180](end_span)
                        edit_vm_config "${vms[$((vm_num-1))]}"
                    else
                        [span_181](start_span)print_status "ERROR" "âŒ Invalid selection"[span_181](end_span)
                    fi
                fi
                ;;
            6)
                if [ $vm_count -gt 0 ]; then
                    [span_182](start_span)read -p "$(print_status "INPUT" "ğŸ—‘ï¸  Enter VM number to delete: ")" vm_num[span_182](end_span)
                    [span_183](start_span)if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then[span_183](end_span)
                        delete_vm "${vms[$((vm_num-1))]}"
                    else
                        [span_184](start_span)print_status "ERROR" "âŒ Invalid selection"[span_184](end_span)
                    fi
                fi
                ;;
            7)
                if [ $vm_count -gt 0 ]; then
                    [span_185](start_span)read -p "$(print_status "INPUT" "ğŸ“ˆ Enter VM number to resize disk: ")" vm_num[span_185](end_span)
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        resize_vm_disk "${vms[$((vm_num-1))]}"
                    else
                        [span_186](start_span)print_status "ERROR" "âŒ Invalid selection"[span_186](end_span)
                    fi
                fi
                ;;
            8)
                if [ $vm_count -gt 0 ]; then
                    [span_187](start_span)read -p "$(print_status "INPUT" "ğŸ“Š Enter VM number to show performance: ")" vm_num[span_187](end_span)
                    [span_188](start_span)if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then[span_188](end_span)
                        show_vm_performance "${vms[$((vm_num-1))]}"
                    else
                        [span_189](start_span)print_status "ERROR" "âŒ Invalid selection"[span_189](end_span)
                    fi
                fi
                ;;
            9)
                if [ $vm_count -gt 0 ]; then
                    [span_190](start_span)read -p "$(print_status "INPUT" "ğŸ› ï¸ Enter VM number to fix issues: ")" vm_num[span_190](end_span)
                    if [[ "$vm_num" =~ ^[0-9]+$ ]] && [ "$vm_num" -ge 1 ] && [ "$vm_num" -le $vm_count ]; then
                        fix_vm_issues "${vms[$((vm_num-1))]}"
                    else
                        [span_191](start_span)print_status "ERROR" "âŒ Invalid selection"[span_191](end_span)
                    fi
                fi
                ;;
            0)
                [span_192](start_span)print_status "INFO" "ğŸ‘‹ Goodbye!"[span_192](end_span)
                exit 0
                ;;
            *)
                [span_193](start_span)print_status "ERROR" "âŒ Invalid option"[span_193](end_span)
                ;;
        esac
        
        [span_194](start_span)read -p "$(print_status "INPUT" "â­ï¸  Press Enter to continue...")"[span_194](end_span)
    done
}

# Set trap to cleanup on exit
trap cleanup EXIT

# Check dependencies
check_dependencies

# Initialize paths
VM_DIR="${VM_DIR:-$HOME/vms}"
mkdir -p "$VM_DIR"

