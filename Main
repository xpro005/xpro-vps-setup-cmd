            if [[ ! "$continue_editing" =~ ^[Yy]$ ]]; then
                break
            fi
        done
    fi
}

# Function to resize VM disk
resize_vm_disk() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        # Check if VM is running
        if is_vm_running "$vm_name"; then
            [span_115](start_span)print_status "ERROR" "âŒ Cannot resize disk while VM is running. Please stop the VM first."[span_115](end_span)
            return 1
        fi
        
        [span_116](start_span)print_status "INFO" "ğŸ’¾ Current disk size: $DISK_SIZE"[span_116](end_span)
        
        while true; do
            [span_117](start_span)read -p "$(print_status "INPUT" "ğŸ“ˆ Enter new disk size (e.g., 50G): ")" new_disk_size[span_117](end_span)
            if validate_input "size" "$new_disk_size"; then
                if [[ "$new_disk_size" == "$DISK_SIZE" ]]; then
                    [span_118](start_span)print_status "INFO" "â„¹ï¸  New disk size is the same as current size. No changes made."[span_118](end_span)
                    return 0
                fi
                
                # Check if new size is smaller than current (not recommended)
                local current_size_num=${DISK_SIZE%[GgMm]}
                local new_size_num=${new_disk_size%[GgMm]}
                local current_unit=${DISK_SIZE: -1}
                local new_unit=${new_disk_size: -1}
                
                # Convert both to MB for comparison
                if [[ "$current_unit" =~ [Gg] ]]; then
                    current_size_num=$((current_size_num * 1024))
                fi
                if [[ "$new_unit" =~ [Gg] ]]; then
                    new_size_num=$((new_size_num * 1024))
                fi
                
                if [[ $new_size_num -lt $current_size_num ]]; then
                    [span_119](start_span)print_status "WARN" "âš ï¸  Shrinking disk size is not recommended and may cause data loss!"[span_119](end_span)
                    [span_120](start_span)read -p "$(print_status "INPUT" "âš ï¸  Are you sure you want to continue? (y/N): ")" confirm_shrink[span_120](end_span)
                    if [[ ! "$confirm_shrink" =~ ^[Yy]$ ]]; then
                        [span_121](start_span)print_status "INFO" "ğŸ‘ Disk resize cancelled."[span_121](end_span)
                        return 0
                    fi
                fi
                
                # Resize the disk
                [span_122](start_span)print_status "INFO" "ğŸ“ˆ Resizing disk to $new_disk_size..."[span_122](end_span)
                if qemu-img resize "$IMG_FILE" "$new_disk_size"; then
                    DISK_SIZE="$new_disk_size"
                    save_vm_config
                    [span_123](start_span)print_status "SUCCESS" "âœ… Disk resized successfully to $new_disk_size"[span_123](end_span)
                else
                    [span_124](start_span)print_status "ERROR" "âŒ Failed to resize disk"[span_124](end_span)
                    return 1
                fi
                break
            fi
        done
    fi
}

# Function to show VM performance metrics
show_vm_performance() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        if is_vm_running "$vm_name"; then
            [span_125](start_span)print_status "INFO" "ğŸ“Š Performance metrics for VM: $vm_name"[span_125](end_span)
            echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
            
            # Get QEMU process ID
            [span_126](start_span)local qemu_pid=$(pgrep -f "qemu-system.*$IMG_FILE")[span_126](end_span)
            if [[ -n "$qemu_pid" ]]; then
                # Show process stats
                [span_127](start_span)echo "âš¡ QEMU Process Stats:"[span_127](end_span)
                ps -p "$qemu_pid" -o pid,%cpu,%mem,sz,rss,vsz,cmd --no-headers
                echo
                
                # Show memory usage
                [span_128](start_span)echo "ğŸ§  Memory Usage:"[span_128](end_span)
                free -h
                echo
                
                # Show disk usage
                [span_129](start_span)echo "ğŸ’¾ Disk Usage:"[span_129](end_span)
                [span_130](start_span)df -h "$IMG_FILE" 2>/dev/null || du -h "$IMG_FILE"[span_130](end_span)
            else
                [span_131](start_span)print_status "ERROR" "âŒ Could not find QEMU process for VM $vm_name"[span_131](end_span)
            fi
        else
            [span_132](start_span)print_status "INFO" "ğŸ’¤ VM $vm_name is not running"[span_132](end_span)
            [span_133](start_span)echo "âš™ï¸  Configuration:"[span_133](end_span)
            [span_134](start_span)echo "  ğŸ§  Memory: $MEMORY MB"[span_134](end_span)
            echo "  âš¡ CPUs: $CPUS"
            echo "  ğŸ’¾ Disk: $DISK_SIZE"
        fi
        echo "ğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆğŸ“ˆ"
        [span_135](start_span)read -p "$(print_status "INPUT" "â­ï¸  Press Enter to continue...")"[span_135](end_span)
    fi
}

# Function to fix VM issues
fix_vm_issues() {
    local vm_name=$1
    
    if load_vm_config "$vm_name"; then
        [span_136](start_span)print_status "INFO" "ğŸ› ï¸ Fixing issues for VM: $vm_name"[span_136](end_span)
        
        [span_137](start_span)echo "ğŸ› ï¸ Select issue to fix:"[span_137](end_span)
        [span_138](start_span)echo "  1) ğŸ”“ Remove lock files"[span_138](end_span)
        [span_139](start_span)echo "  2) ğŸ—‘ï¸  Recreate seed image"[span_139](end_span)
        [span_140](start_span)echo "  3) ğŸ”„ Recreate configuration"[span_140](end_span)
        [span_141](start_span)echo "  4) ğŸ’€ Kill stuck processes"[span_141](end_span)
        [span_142](start_span)echo "  0) â†©ï¸  Back"[span_142](end_span)
        
        [span_143](start_span)read -p "$(print_status "INPUT" "ğŸ¯ Enter your choice: ")" fix_choice[span_143](end_span)
        
        case $fix_choice in
            1)
                [span_144](start_span)print_status "INFO" "ğŸ”“ Removing lock files..."[span_144](end_span)
                rm -f "${IMG_FILE}.lock" 2>/dev/null
                rm -f "${IMG_FILE}"*.lock 2>/dev/null
                [span_145](start_span)print_status "SUCCESS" "âœ… Lock files removed"[span_145](end_span)
                ;;
            2)
                [span_146](start_span)print_status "INFO" "ğŸ”„ Recreating seed image..."[span_146](end_span)
                if [[ -f "$SEED_FILE" ]]; then
                    rm -f "$SEED_FILE"
                fi
                setup_vm_image
                [span_147](start_span)print_status "SUCCESS" "âœ… Seed image recreated"[span_147](end_span)
                ;;
            3)
                [span_148](start_span)print_status "INFO" "ğŸ”„ Recreating configuration..."[span_148](end_span)
                save_vm_config
                [span_149](start_span)print_status "SUCCESS" "âœ… Configuration recreated"[span_149](end_span)
                ;;
            4)
                [span_150](start_span)print_status "INFO" "ğŸ’€ Killing stuck processes..."[span_150](end_span)
                pkill -f "qemu-system.*$IMG_FILE" 2>/dev/null
                sleep 1
                [span_151](start_span)if pgrep -f "qemu-system.*$IMG_FILE" >/dev/null; then[span_151](end_span)
                    pkill -9 -f "qemu-system.*$IMG_FILE" 2>/dev/null
                    [span_152](start_span)print_status "SUCCESS" "âœ… Forcefully killed stuck processes"[span_152](end_span)
                else
                    [span_153](start_span)print_status "INFO" "ğŸ’¤ No stuck processes found"[span_153](end_span)
                fi
                ;;
            0)
                return 0
                ;;
            *)
                [span_154](start_span)print_status "ERROR" "âŒ Invalid selection"[span_154](end_span)
                ;;
        esac
    fi
}

# Main menu function
main_menu() {
    while true; do
        display_header
        
        local vms=($(get_vm_list))
        local vm_count=${#vms[@]}
        
        if [ $vm_count -gt 0 ]; then
            [span_155](start_span)print_status "INFO" "ğŸ“‚ Found $vm_count existing VM(s):"[span_155](end_span)
            for i in "${!vms[@]}"; do
                [span_156](start_span)local status="ğŸ’¤"[span_156](end_span)
                if is_vm_running "${vms[$i]}"; then
                    [span_157](start_span)status="ğŸš€"[span_157](end_span)
                fi
                [span_158](start_span)printf "  %2d) %s %s\n" $((i+1)) "${vms[$i]}" "$status"[span_158](end_span)
            done
            echo
        fi
        
        [span_159](start_span)echo "ğŸ“‹ Main Menu:"[span_159](end_span)
        [span_160](start_span)echo "  1) ğŸ†• Create a new VM"[span_160](end_span)
        if [ $vm_count -gt 0 ]; then
            [span_161](start_span)echo "  2) ğŸš€ Start a VM"[span_161](end_span)
            [span_162](start_span)echo "  3) ğŸ›‘ Stop a VM"[span_162](end_span)
            [span_163](start_span)echo "  4) ğŸ“Š Show VM info"[span_163](end_span)
            [span_164](start_span)echo "  5) ğŸ“ Edit VM configuration"[span_164](end_span)
            [span_165](start_span)echo "  6) ğŸ—‘ï¸  Delete a VM"[span_165](end_span)
            [span_166](start_span)echo "  7) ğŸ“ˆ Resize VM disk"[span_166](end_span)
            [span_167](start_span)echo "  8) ğŸ“Š Show VM performance"[span_167](end_span)
            [span_168](start_span)echo "  9) ğŸ› ï¸ Fix VM issues"[span_168](end_span)
