#!/bin/bash

# COLORS - RED THEME
R="\e[1;31m" # Bright Red
G="\e[1;32m" # Green
Y="\e[1;33m" # Yellow
B="\e[1;34m" # Blue
C="\e[1;36m" # Cyan
M="\e[1;35m" # Magenta
W="\e[1;37m" # White
N="\e[0m"    # Reset

